<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.youngyeehomies.hssapp" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="com.example.youngyeehomies.hssapp.LoginActivity"
            android:label="@string/title_login_activity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.youngyeehomies.hssapp.RegisterActivity"
            android:label="HSS - Register"
            android:theme="@style/AppTheme">
         </activity>

        <activity
            android:name="com.example.youngyeehomies.hssapp.ViewApptsActivity"
            android:label="@string/title_activity_view_appts" >
        </activity>

        <activity
            android:name=".ActivateAccountActivity"
            android:label="@string/title_activity_user" >
        </activity>

    </application>

</manifest>
