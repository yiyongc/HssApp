<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    tools:context=".CreateAppointmentActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainContent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#d3d3d3"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:src="@drawable/logo"
                android:id="@+id/logo"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Create New Appointment"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"/>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/radioGroupLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Select Clinic of Visit:"
                            android:layout_weight="1"
                            android:gravity="end"/>



                </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="end">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Select Date:"
                            android:layout_weight="1"
                            android:gravity="end"/>

                        <Button
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/dateSlotSelection"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            style="?android:spinnerStyle"
                            android:gravity="center"
                            android:textSize="14sp"/>

                    </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Time:"
                        android:layout_weight="1"
                        android:gravity="end"/>

                    <Spinner
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/timeSlotSelection"
                        android:entries="@array/timeslot"
                        android:dropDownSelector="@null"
                        >
                    </Spinner>

                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Appointment"
                    android:onClick="createAppointment"
                    android:layout_marginTop="15dp"
                />

            </LinearLayout>
        </ScrollView>
        </LinearLayout>



    </FrameLayout>

    <LinearLayout
        android:id="@+id/leftDrawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:gravity="center" >

        <TextView
            android:id="@+id/session_user"
            android:layout_width="240dp"
            android:layout_height="80dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:gravity="center"
            android:background="#F8A8A8"
            android:text="Hello!"
            android:textColor="#ffffff"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:id="@+id/separator"
            android:visibility="visible"
            android:background="#ffffff"/>

        <ListView
            android:id="@+id/drawerList"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="#FFFFFF"
            android:dividerHeight="1dp"
            android:headerDividersEnabled="true"
            android:background="#F8A8A8"
            android:layout_alignTop="@+id/action_bar"
            />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>



