<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    tools:context=".CreateAppointmentActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainContent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#d3d3d3"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:src="@drawable/logo2"
                android:id="@+id/logo"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Create New Appointment"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:textColor="#325b56"/>





                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:id="@+id/createApptSpace">

                    </FrameLayout>

        </LinearLayout>



    </FrameLayout>

    <LinearLayout
        android:id="@+id/leftDrawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:gravity="center" >

        <TextView
            android:id="@+id/session_user"
            android:layout_width="240dp"
            android:layout_height="100dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:gravity="center"
            android:background="#F8A8A8"
            android:text="Hello!"
            android:textColor="#ffffff"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:id="@+id/separator"
            android:visibility="visible"
            android:background="#ffffff"/>

        <ListView
            android:id="@+id/drawerList"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="#FFFFFF"
            android:dividerHeight="1dp"
            android:headerDividersEnabled="true"
            android:background="#F8A8A8"
            android:layout_alignTop="@+id/action_bar"
            />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>



