<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="4dp"

    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AppointmentCardView"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="#FFFFFF"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/appointment_cat_icon"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/gastro_ic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/appointment_cat_name"
                android:textSize="16sp"
                android:textColor="#222222"
                android:textStyle="bold"
                android:text="Consultation"
                android:paddingRight="6dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/appointment_date"
                android:layout_toRightOf="@+id/appointment_cat_icon"
                android:layout_toEndOf="@+id/appointment_cat_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/appointment_notes"
                android:textColor="#888888"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. "
                android:layout_below="@+id/appointment_cat_name"
                android:layout_alignStart="@+id/appointment_cat_name"
                android:layout_alignLeft="@+id/appointment_cat_name"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/appointment_date"
                android:textColor="#777777"
                android:text="27 Jun 2015"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/appointment_time"
                android:textColor="#777777"
                android:text="2.30 P.M."
                android:layout_below="@+id/appointment_date"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
