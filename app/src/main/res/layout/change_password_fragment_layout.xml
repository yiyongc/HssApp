<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/createApptView1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">


            <TextView
                android:id="@+id/enterCurrentPasswordTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Current Password:"
                android:textColor="#325b56"
                android:maxLines="100"
                android:gravity="end"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/change_current"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_toRightOf="@+id/enterCurrentPasswordTV"/>



            <TextView
                android:id="@+id/enterNewPasswordTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter New Password:"
                android:textColor="#325b56"
                android:maxLines="100"
                android:gravity="end"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/enterCurrentPasswordTV"
                android:layout_alignRight="@+id/enterCurrentPasswordTV"
                android:layout_alignEnd="@+id/enterCurrentPasswordTV"/>

            <EditText
                android:id="@+id/change_new"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginTop="20dp"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_toRightOf="@+id/enterNewPasswordTV"
                android:layout_below="@+id/enterCurrentPasswordTV"
                android:layout_alignLeft="@+id/change_current"
                android:layout_alignStart="@+id/change_current"/>


            <TextView
                android:id="@+id/enterNewPasswordTV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Re-Enter New Password:"
                android:textColor="#325b56"

                android:maxLines="100"
                android:gravity="end"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/enterNewPasswordTV"
                android:layout_alignRight="@+id/enterNewPasswordTV"
                android:layout_alignEnd="@+id/enterNewPasswordTV"/>

            <EditText
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/change_new2"
                android:background="#ffffff"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/enterNewPasswordTV"
                android:layout_toRightOf="@+id/enterNewPasswordTV2"
                android:layout_alignLeft="@+id/change_new"
                android:layout_alignStart="@+id/change_new"/>

        <Button
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:onClick="btnUpdatePassword"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/change_new2"
            android:layout_centerHorizontal="true"
            />

       </RelativeLayout>



</LinearLayout>